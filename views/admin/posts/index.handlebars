<h1>All posts</h1>


{{> home/form-msgs}}


<table class="table table-bordered">

    <thead>
        <tr>
            <th>Id</th>
            <th>Image</th>
            <th>Title</th>
            <th>Status</th>
            <th>Category</th>
            <th>Allow Comments</th>
            <th>Date</th>
            <th>View Post</th>
        </tr>
    </thead>

    <tbody>
        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td>
        {{#if hasPhoto}}
            <img height="50" src="/uploads/{{file}}" alt="">
        {{else}}
            <img height="50" src="/default/No_Image_Available.jpg" alt="">
        {{/if}}
            </td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{category.name}}</td>
            <td>{{allowComments}}</td>
            <td>{{generateDate date 'MMMM Do YYYY'}}</td>
            <td><a href="/post/{{id}}">view</a></td>


        </tr>
        {{/each}}
    </tbody>


</table>