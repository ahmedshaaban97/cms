<div class="row">

    <!-- Post Content Column -->
    <div class="col-lg-8">

            <!-- Title -->
            <h1 class="mt-4">{{post.title}}</h1>

            <!-- Author -->
            <p class="lead">
                by
                <a>{{post.user.firstName}} {{post.user.lastName}}</a>
            </p>

            <hr>

            <!-- Date/Time -->
            <p>Posted on {{generateDate date 'MMMM Do YYYY'}}</p>

            <hr>

            <!-- Preview Image -->
            {{#if post.hasPhoto}}

            <img class="card-img-top" height="300" width="750" src="/uploads/{{post.file}}" alt="Card image cap">
            {{else}}
                <img class="card-img-top" height="300" width="750" src="/default/No_Image_Available.jpg" alt="Card image cap">

            {{/if}}


        <hr>

        <!-- Post Content -->
        <p class="lead">{{post.description}}</p>

        <hr>


        {{#if user}}
        {{#if post.allowComments}}

        <!-- Comments Form -->
        <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
                <form action="/admin/comments/{{post.id}}" method="post">
                    <div class="form-group">
                        <textarea name="body" class="form-control" rows="3"></textarea>

                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>

        {{else}}

            <h3>Comments not allowed in this post</h3>

            <br>
            <hr>

        {{/if}}

        {{else}}
            <h3>To comment please <a href="/login">login</a></h3>
            <br>
            <hr>
        {{/if}}


            {{#each post.comments}}
        <!-- Single Comment -->
        <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
            <div class="media-body">
                <h5 class="mt-0">{{user.firstName}} {{user.lastName}}</h5>

                         {{body}}
                        <hr>
                    </div>

        </div>
                {{/each}}




